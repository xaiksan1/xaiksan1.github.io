    <script>
        // Create particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('sparkle');

                // Random position
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;

                // Random size
                const size = Math.random() * 4 + 2;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;

                // Random animation delay
                particle.style.animationDelay = `${Math.random() * 5}s`;

                // Random neon color
                const colors = ['neon-pink', 'neon-blue', 'neon-green', 'neon-purple', 'neon-orange'];
                const randomColor = colors[Math.floor(Math.random() * colors.length)];
                particle.style.backgroundColor = `var(--tw-color-${randomColor})`;

                particlesContainer.appendChild(particle);
            }
        }

        // Create rainbow trail path
        function createRainbowTrail() {
            const path = document.getElementById('rainbow-trail');
            const svg = path.parentElement;
            const width = svg.clientWidth;
            const height = svg.clientHeight;

            // Create a simple squiggly line path
            let d = `M0 ${height * 0.3}`;
            const segments = 20;
            const segmentWidth = width / segments;

            for (let i = 1; i <= segments; i++) {
                const x = i * segmentWidth;
                const y = height * (0.3 + Math.sin(i) * 0.1);
                d += ` L${x} ${y}`;
            }

            path.setAttribute('d', d);
        }

        // Animate elements when they come into view
        function animateOnScroll() {
            const elements = document.querySelectorAll('.rainbow-border, .neon-shadow');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });

            elements.forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });
        }

        // Initialize everything when the page loads
        window.addEventListener('load', () => {
            createParticles();
            createRainbowTrail();
            animateOnScroll();
        });

        // Update rainbow trail on resize
        window.addEventListener('resize', createRainbowTrail);
    </script>

